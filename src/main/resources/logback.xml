<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

   <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%green(%d{HH:mm:ss}) %boldCyan(%0.-5p) %yellow(%-20.20logger{19}) %cyan(:) %m%n</pattern>
      </encoder>
   </appender>

   <logger name="no.nav.helse.cli" level="INFO"/>

   <root level="WARN">
      <appender-ref ref="CONSOLE"/>
   </root>
</configuration>
